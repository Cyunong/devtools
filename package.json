{
  "name": "debug-server-next",
  "version": "3.0.129",
  "description": "Dev server for hippy-core.",
  "repository": "https://git.woa.com/TencentDynamicFramework/DevTools/devtools-debug-server",
  "homepage": "http://hippyjs.org",
  "author": "chestershen@tencent.com",
  "license": "Apache-2.0",
  "bin": {
    "hippy-debug": "dist/index.js",
    "debug-server": "dist/index.js"
  },
  "scripts": {
    "start": "nodemon --exec \"npm run dev\"",
    "dev": "cross-env DEBUG=*,-koa-router,-koa-send TS_NODE_FILES=true node --inspect=127.0.0.1:7777 -r ts-node/register src/index.ts",
    "dev:gamecenter": "cross-env DEBUG=*,-koa-router TS_NODE_FILES=true node --inspect=127.0.0.1:7777 -r ts-node/register src/index.ts --entry=src/public/game-center/index.bundle",
    "build": "npx gulp",
    "test": "npx jest",
    "lint": "npx eslint --fix --ext .js,.ts ./src"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts"
  },
  "keywords": [
    "hippy",
    "debug",
    "debugger"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "types": "dist/@types/index.d.ts",
  "dependencies": {
    "@koa/cors": "^3.1.0",
    "color-normalize": "^1.5.2",
    "colors": "^1.4.0",
    "dotenv": "^10.0.0",
    "eventemitter3": "^4.0.7",
    "kill-port": "^1.6.1",
    "koa": "^2.13.1",
    "koa-compress": "^5.1.0",
    "koa-conditional-get": "^3.0.0",
    "koa-etag": "^4.0.0",
    "koa-router": "^10.0.0",
    "koa-static": "^5.0.0",
    "lodash": "^4.17.21",
    "module-alias": "^2.2.2",
    "open": "^8.4.0",
    "redis": "^4.0.0-rc.4",
    "request": "^2.88.2",
    "request-promise": "^4.2.6",
    "tdf-devtools-protocol": "^0.0.36",
    "tslib": "^2.3.0",
    "uuid": "^8.3.2",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.5",
    "ws": "^7.5.3",
    "yargs": "^15.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@tencent/eslint-config-tencent": "^0.15.2",
    "@types/colors": "^1.2.1",
    "@types/jest": "^26.0.24",
    "@types/koa": "^2.13.4",
    "@types/koa-router": "^7.4.4",
    "@types/koa-static": "^4.0.2",
    "@types/node": "^16.11.10",
    "@types/ws": "^7.4.6",
    "@types/yargs": "^17.0.5",
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "@typescript-eslint/parser": "^4.29.1",
    "babel-jest": "^27.0.6",
    "cross-env": "^7.0.3",
    "crossenv": "0.0.2-security",
    "eslint": "^7.32.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-prettier": "^3.4.0",
    "gulp": "^4.0.2",
    "gulp-clean": "^0.4.0",
    "gulp-typescript": "^6.0.0-alpha.1",
    "husky": "^7.0.2",
    "jest": "^27.0.6",
    "jest-transform-stub": "^2.0.0",
    "lint-staged": "^11.1.2",
    "nodemon": "^2.0.12",
    "prettier": "^2.3.2",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  }
}
